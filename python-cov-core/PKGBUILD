pkgname=python-cov-core
pkgver=1.14.0
pkgrel=1    # NOTE
pkgdesc="plugin core for use by pytest-cov, nose-cov and nose2-cov"
arch=('any')
license=('MIT')
url='https://github.com/schlamar/cov-core'
depends=('python' 'python-coverage>=3.6')
makedepends=('python-distribute')
source=(http://pypi.python.org/packages/source/c/cov-core/cov-core-$pkgver.tar.gz)
md5sums=('14557b0317da6d83b56c0fe4b6b55beb')

package() {
  cd "${srcdir}/cov-core-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1
}
