_python=python
_distname=timetra.diary
pkgname=$_python-timetra-diary
pkgver=0.1.0
pkgrel=1
pkgdesc="A diary and time tracker with CLI frontend and a YAML backend"
arch=(any)
url="http://github.com/neithere/timetra.diary"
license=('LGPL3')
depends=(
  'python-argh>=0.22'
  'python-confu>=0.0.1'
  'python-monk>=0.11.2'
  'python-prettytable>=0.6.1'
  'python-dateutil>=2.1'
  'python-yaml>=3.10'
)
optdepends=(
  'urwid: experimental curses-based TUI'
)
makedepends=('python-distribute')
source=("http://pypi.python.org/packages/source/${_distname:0:1}/$_distname/$_distname-$pkgver.tar.gz")
md5sums=('ba31053f0f8d51baf6c889db17c4fb93')

package() {
  cd "$srcdir/$_distname-$pkgver"
  $_python setup.py install --root="$pkgdir/" --optimize=1
}
