# Maintainer: Andrey Mikhaylenko <neithere at gmail dot com>
_python=python
_distname=argcomplete
pkgname=$_python-$_distname
pkgver=0.8.0
pkgrel=1
pkgdesc="easy, extensible command line tab completion of arguments for your Python script"
arch=(any)
url="https://github.com/kislyuk/argcomplete"
license=('Apache')
depends=('python>=3.3')
makedepends=('python-distribute')
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=(http://pypi.python.org/packages/source/${_distname:0:1}/$_distname/$_distname-${pkgver}.tar.gz)
md5sums=('9beddca71ed8ffac5ce45b6c84258817')

package() {
   cd "${srcdir}/$_distname-${pkgver}"
   $_python setup.py install --root="${pkgdir}" --optimize=1 || exit 1
}
