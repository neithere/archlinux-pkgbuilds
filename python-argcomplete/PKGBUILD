# Maintainer: Andrey Mikhaylenko <neithere at gmail dot com>
pkgname=python-argcomplete
pkgver=0.3.5
pkgrel=1
pkgdesc="Bash completion for argparse"
arch=(any)
url="https://github.com/kislyuk/argcomplete"
license=('Apache')
depends=('python>=3.3')
makedepends=('python-distribute')
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=(http://pypi.python.org/packages/source/a/argcomplete/argcomplete-${pkgver}.tar.gz)
md5sums=('87e9028e97527c9c99a45ddea3fa32d8')

build() {
   cd "${srcdir}/argcomplete-${pkgver}"
   python setup.py install --root="${pkgdir}" --optimize=1 || exit 1
}
